:css
  .section-body {
    p {
      font-size: 12pt; 
      font-family: 'Courier New'; 
      color: #000000; 
      background-color: transparent; 
      font-weight: 400; 
      font-style: normal; 
      font-variant: normal; 
      text-decoration: none; 
      vertical-align: baseline; 
      white-space: pre-wrap;
      line-height: 2.4; 
      text-indent: 36pt; 
      margin-top: 0pt; 
      margin-bottom: 0pt;
    }
  } 
  
#manuscript
  -@sections.each do |page| 
    %h1
      ="Chapter #{page.sequence.to_s}"
    .section-body  
      =page.body.to_s.html_safe
