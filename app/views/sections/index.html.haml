.container-fluid##sections
  .row
    .col-md-3
    .col-md-6.col-sm-12
      .card

        %h1 Sections

        %table
          %tr
            %th Sequence
            %th Title    
            %th Summary
            %th 
              = link_to 'New Section', new_section_path, class:"btn btn-primary"
          - @sections.each do |section|
            %tr
              %td= section.sequence
              %td= link_to section.title, edit_section_path(section)
              %td= section.summary
              %td
        %br


