.container-fluid#sections
.row
  .col-md-3.scroller-container
    -@sections.each do |item|
      %a{href: "#chapter-#{item.id}", class: "scrollLink"}
        =item.name
      %br
  .col-md-8.scroller-container
    -@sections.each do |page| 
      .row.section-page{id: "chapter-#{page.id}", data:{page: page.id}}
        %h3
          =page.name


    $( "a.scrollLink" ).click ->
        event.preventDefault();
        $(".scroller-container").animate({ scrollTop: $($(this).attr("href")).offset().top }, 100)

.section-page {
  width: 100%;
  min-height:100%;
  border-bottom: 2px solid #000;
}

.scroller-container{
  overflow-y: scroll;
  min-height:100%;
  height:800px;
}


