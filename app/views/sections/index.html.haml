.container-fluid#sections
  .row
    .col-md-1
    .col-md-2.scroller-container
      -@sections.each do |item|
        %a{href: "#chapter-#{item.id}", class: "scrollLink"}
          =item.title
        %br
    .col-md-8.scroller-container
      -@sections.each do |page| 
        .row.section-page{id: "chapter-#{page.id}", data:{page: page.id}}
          - if user_signed_in? and current_user.role_cd > 0
            %h3.click-to-edit{data:{page: page.id}}
          - else
            %h3
            =page.title
          =page.body.html_safe




