.container-fluid#sections
  .row
    .col-md-2
    .col-md-8.col-sm-12.card
      %p#notice= notice

      %h1
        = @section.title
      %p
        %b Sequence:
        = @section.sequence
      %p
        %b Summary:
        = @section.summary
      %p.section-body= @section.body.html_safe
      %p
        %b Throughline:
        = @section.throughline
      %p
        %b Resolution:
        = @section.resolution
      %p
        %b Conflict:
        = @section.conflict

      =link_to "Chapters", sections_path(story_id: @section.story_id), class: "btn btn-primary" 

