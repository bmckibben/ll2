.container-fluid#stories
  .row
    .col-md-2
    .col-md-8.card
      %h1 Chapter Notes

      %table
        %thead
          %tr
            %th Chapter
            %th Note
            %th
            %th
            %th

        %tbody
          - @section_notes.each do |section_note|
            %tr
              %td= section_note.section_id
              %td= section_note.note
              %td= link_to 'Show', section_note
              %td= link_to 'Edit', edit_section_note_path(section_note)
              %td= link_to 'Destroy', section_note, method: :delete, data: { confirm: 'Are you sure?' }

      %br

      = link_to 'New Section note', new_section_note_path

