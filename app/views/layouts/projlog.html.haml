!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ProjLog
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body.gradient-main
    #page-container
      = render 'layouts/public_navigation'  
      %div{:class => "site-content #{'disabled' if current_slot.blank?}", "data-controller" => "timer", "data-timer-start" => "#{current_slot.try(:start_at)}", "data-timer-stop" => "#{current_slot.present? ? stop_slot_path(current_slot) : ''}", "data-timer-url" => slots_path}
        = render 'header'
        .container
          - if signed_in?
            .row
              .col-md-2
                = render 'nav'
              .col-md-10.card
                = render_flash
                = yield
