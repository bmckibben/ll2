.row
  .col-md-8
    = simple_form_for project do |form|
      = form.text_field :name
      .row
        .col-md-5
          = form.number_field :rate, label: 'Rate per hour (in cents)'
        .col-md-4

      .form-colors
        - Project::COLORS.each do |color|
          = form.radio_button :color, color
          %label{:for => "project_color_#{color.sub('#', '')}", :style => "background:#{color};"}
      = form.check_box :disabled
      .mt-4
        = form.submit 'Save', class: 'btn btn-sm btn-secondary mr-1'
        = link_to 'Cancel', (form.object.persisted? ? form.object : projects_path), class: 'text-danger'
