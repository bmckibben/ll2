%div{:id => "timer-proj-#{project.id}-#{day.to_s(:db)}"}
  .item-brd
    .row
      .col-md-8
        %a.text-dark.no-decor{"data-toggle" => "collapse", :href => "#timer-proj-slots-#{project.id}-#{day.to_s(:db)}"}
          %h5.h6.mb-0
            %span.badge.badge-light.text-boldy.text-muted.mr-1= project_slots.size
            %span.proj-col-label-sm{:style => "background:#{project.color}"}
            %span.text-boldy.mr-2= project.name
      .col-md-4.text-right
        %span.h6.text-muted.inline-block.mr-3
          = project_slots.last.start_at_dt.in_time_zone(current_user.time_zone).to_s(:short_time)
          \-
          \#{project_slots.first.end_at_dt.in_time_zone(current_user.time_zone).to_s(:short_time)}
        %span.h6.text-boldy= duration_total project_slots
  .collapse{:id => "timer-proj-slots-#{project.id}-#{day.to_s(:db)}"}
    = render project_slots
