      %th Date
      %th Ball 1
      %th Ball 2
      %th Ball 3
      %th Ball 4
      %th Ball 5
      %th Powerball
      %th
      %th
      %th

  %tbody
    - @histories.each do |history|
      %tr
        %td= history.date
        %td= history.ball_1
        %td= history.ball_2
        %td= history.ball_3
        %td= history.ball_4
        %td= history.ball_5
        %td= history.powerball
        %td= link_to 'Show', history
        %td= link_to 'Edit', edit_history_path(history)
