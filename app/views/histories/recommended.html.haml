.container-fluid#histories
  .row
    .col-md-2
    .col-md-8

      %h1 Recomendation

      .pull-right
        = link_to 'New History', new_history_path, class: "btn btn-primary"

      =simple_form_for @recommend_params, url: recommended_path, html: { class: 'form-horizontal' } do |f|
        .field
          = f.input :base
        .field
          = f.input :lamda
        .actions
          = f.submit 'New Recommendation', class: "btn btn-primary"

      .card
        %h2 Recommended
        .row
          .col-md-6
            = "Five"
            %table
              %tr
                %th NUM
                %th SCORE
              -@recommended.each do |(k,v)|
                %tr
                %td
                  =k
                %td
                  =v.round(2)
          .col-md-6
            = "PB"
            %table
              %tr
                %th NUM
                %th SCORE
              -@single_ball.each do |(k,v)|
                %tr
                  %td
                    =k
                  %td
                    =v.round(2)


