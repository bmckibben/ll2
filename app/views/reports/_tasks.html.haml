.collapse{:id => "report-slots-#{project.id}"}
  - grouped_task_slots.each do |task, task_slots|
    .item-brd
      .row
        .col-md-8
          %h5.h6.mb-0.pl-4.text-muted.text-normal= task.name
        .col-md-4.text-right
          - duration_total task_slots do |duration, cost|
            %span.h6.text-boldy= duration
            - if cost.present?
              %span.h6.text-boldy.ml-3= cost
